{% include 'config' %}
in:
  type: oracle
  driver_path: {{driver_path}}
  driver_class: {{driver_class}}
  url: {{url}}
  user: {{userid}}
  password: {{password}}
  table: M_APCRD_MEM_TMP_MCH
  select: APCRD_NO
          ,MEM_ID
          ,MCH_FLG
          ,REG_DTTM
          ,REG_USR_ID
          ,UPD_DTTM
          ,UPD_USR_ID
          ,DAT_UPD_CLS
          ,UPD_TMS
          ,LGC_DEL_FLG
  where: {{where}}

filters:
  - type: typecast
    default_timestamp_format: "%Y-%m-%d %H:%M:%S"
    default_timezone: "Asia/Tokyo"
    columns:
      - {name: REG_DTTM, type: string}
      - {name: UPD_DTTM, type: string}

  - type: ruby_proc
    columns:
      - name: APCRD_NO
        proc: |             
          ->(apcrdNo) do
            apcrdNo = apcrdNo.gsub("[\||\r|\n]", "")
            apcrdNo
          end
      - name: MEM_ID
        proc: |             
          ->(memId) do
            memId = memId.gsub("[\||\r|\n]", "")
            memId
          end
      - name: UPD_USR_ID
        proc: |             
          ->(updUsrId) do
            updUsrId = updUsrId.gsub("[\||\r|\n]", "")
            updUsrId
          end
      - name: REG_USR_ID
        proc: |             
          ->(regUsrId) do
            regUsrId = regUsrId.gsub("[\||\r|\n]", "")
            regUsrId
          end

out:
  type: stdout
